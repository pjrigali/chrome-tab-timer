{
  "manifest_version": 3,
  "name": "Tab Time Tracker",
  "version": "1.0",
  "description": "Tracks how long tabs have been open in seconds with a badge and popup.",
  "permissions": ["tabs", "storage"],
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Time Tracker"
  }
}

